<h1>Productos</h1>

<div id="container">
    <div id="productos">
            {{#each productos}}
                <ul data-id={{_id}}>
                    <li><h3> {{title}}<h3></li>
                    <li> {{description}} </li>
                    <li>$ {{price}} </li>
                    <li><img src={{thumbnail}} alt={{description}} width="250" > </li>
                    <li class="codigo">Código: {{code}} </li>
                    <li class="codigo">Id: {{_id}}</li>
                    <li>Stock Actual {{stock}} </li>
                    <li><button class="comprar" onclick="comprar(`{{_id}}`)">Agregar al carrito</button></li>
                </ul>
            {{/each}}
    </div>
</div>
<footer>
{{#each carrito}}
    <input type="text" value="{{_id}}" id="carrito" hidden />
<a href="/carrito/{{_id}}">Ir a Carrito</a>
{{/each}}
{{#if pageInfo.hasPrevPage}}<a href="http://localhost:8080/products?limit={{pageInfo.limit}}&page={{pageInfo.prevPage}}"> <<< Pag. Anterior</a> {{/if}}
<input type="number" max="{{pageInfo.totalPages}}" min="1" step="1" id="PaginaActual" value="{{pageInfo.page}}" name="PaginaActual" onchange="CambioPagina()" >
{{!-- <h3>Pagina Actual {{pageInfo.page}}</h3> --}}
{{#if pageInfo.hasNextPage}}<a href="http://localhost:8080/products?limit={{pageInfo.limit}}&page={{pageInfo.nextPage}}">Próxima Pag.>>> </a>{{/if}}
</footer>
<script>
const CambioPagina = () => {
    const inputPaginaActual = document.getElementById("PaginaActual");
    console.log(inputPaginaActual.value)
    window.location.href ="/products?limit={{{pageInfo.limit}}}&page="+inputPaginaActual.value; 
}
</script>
<script src="/js/productos.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
